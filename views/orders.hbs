<h1>Мои заказы</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    Заказы <small>{{_id}}</small>
                </span>
                <p class='date'>{{date}}</p>
                <p><em>{{user.userId.name}}</em>{{user.userId.email}}</p>
            </div>

            <ol>
                {{#each products}}
                <li>
                    {{product.title}} (x <strong>{{count}}</strong>)
                </li>
                {{/each}}
            </ol>
            <hr>
            <p>Цена: <span class="price">{{price}}</span></p>
        </div>
    </div>
</div>
{{/each}}
{{else}}

<p>Заказов пока нет</p>
{{/if}}