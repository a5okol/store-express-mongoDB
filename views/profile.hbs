<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        <img src="/{{user.avatarUrl}}" class="avatar" height="auto" alt="avatar - {{user.name}}">
        {{else}}
        <p>Аватара нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Ваше имя</label>
                <span class="helper-text" data-error="Имя не может быть пустым"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Аватар</span>
                    <input name="avatar" type="file" multiple>
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Добавьте аватар">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button id='submit' class="btn btn-large">Изменить</button>

        </form>
    </div>
</div>