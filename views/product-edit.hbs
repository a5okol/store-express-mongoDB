<div class="edit-product">
    <h1 class='edit-product-h1'>Редактировать {{product.title}}</h1>

    <form action="/edit" method="POST" class='product-form' novalidate>

        <div class="switch availability">
            <label>
                Нет в наличии
                <input name="availability" type="checkbox" value='{{product.availability}}'>
                <span class="lever"></span>
                В наличии
            </label>
        </div>
        <div>
            <label>Тип одежды</label>
            <select name="typeOfclothes" id="typeOfclothes" type="select" class="browser-default" required
                value='{{product.typeOfclothes}}'>
                <option value="" disabled="true" selected="selected">Выберите тип одежды</option>
                <option value="T-SHIRTS">T-SHIRTS</option>
                <option value="SWEATSHIRTS">SWEATSHIRTS</option>
                <option value="HOODY">HOODY</option>
                <option value="SHIRTS">SHIRTS</option>
                <option value="BACKPACKS">BACKPACKS</option>
            </select>
        </div>
        <div class="input-field">
            <input id="title" name="title" type="text" class="validate" required value='{{product.title}}'>
            <label for="title">Название товара</label>
            <span class="helper-text" data-error="Введите название товара"></span>
        </div>
        <div class="input-field">
            <input id="price" name="price" type="number" class="validate" required value='{{product.price}}'>
            <label for="price">Цена</label>
            <span class="helper-text" data-error="Введите цену товара"></span>

        </div>
        <div class="input-field">
            <input id="sku" name="sku" type="text" class="validate" required value='{{product.sku}}'>
            <label for="sku">Артикул</label>
            <span class="helper-text" data-error="Введите артикул"></span>
        </div>
        <div class="input-field">
            <input id="quantity" name="quantity" type="number" class="validate" required value='{{product.quantity}}'>
            <label for="quantity">Количество</label>
            <span class="helper-text" data-error="Введите количество товаров"></span>
        </div>

        <div class="input-field">
            <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
            <label for="img">Добавьте url изображения</label>
            <span class="helper-text" data-error="Добавьте корректный url изображения"></span>
        </div>

        <input type="hidden" name="id" value='{{product.id}}'>
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type='submit' id='submit' class="btn btn-large">Редактировать товар</button>
    </form>
    <hr>

    <form action="/remove" method="POST">
        <input type="hidden" name='id' value='{{product.id}}'>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn red">Удалить товар</button>
    </form>
</div>

<script>
    document.getElementById('submit').onclick = () => {
        const select = document.querySelector("select[name='typeOfclothes']")
        const value = select.value;
        const option = select.querySelector(`option[value='${value}']`)
        const text = option.innerText
        console.log(text)
    }

</script>